<script>
    function showTooltip() {
        // Obtener el botón
        var button = document.querySelector('[data-bs-toggle="tooltip"]');

        // Mostrar el tooltip
        var tooltip = new bootstrap.Tooltip(button);
        tooltip.show();

        // Ocultar el tooltip después de un tiempo (opcional)
        setTimeout(function () {
            tooltip.hide();
        }, 1000);  // Cambia el tiempo según tus necesidades
    }

    function copyEmail(emailValue) {
        const tempElement = document.createElement('textarea');
        tempElement.value = emailValue;
        document.body.appendChild(tempElement);
        tempElement.select();
        document.execCommand('copy');
        document.body.removeChild(tempElement);
    }
</script>

